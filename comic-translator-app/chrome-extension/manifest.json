{
  "manifest_version": 3,
  "name": "Comic Translator",
  "version": "1.0.0",
  "description": "Translate comic images on manga and webtoon sites with AI-powered OCR",
  
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "scripting"
  ],
  
  "host_permissions": [
    "*://mangadex.org/*",
    "*://*.mangadex.org/*",
    "*://webtoons.com/*",
    "*://*.webtoons.com/*",
    "*://mangaplus.shueisha.co.jp/*",
    "*://viz.com/*",
    "*://*.viz.com/*",
    "*://comixology.com/*",
    "*://*.comixology.com/*"
  ],

  "background": {
    "service_worker": "background/service-worker.js"
  },

  "content_scripts": [
    {
      "matches": [
        "*://mangadex.org/*",
        "*://*.mangadex.org/*",
        "*://webtoons.com/*",
        "*://*.webtoons.com/*",
        "*://mangaplus.shueisha.co.jp/*",
        "*://viz.com/*",
        "*://*.viz.com/*",
        "*://comixology.com/*",
        "*://*.comixology.com/*"
      ],
      "js": ["content/content-script.js"],
      "css": ["content/overlay.css"]
    }
  ],

  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Comic Translator",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "web_accessible_resources": [
    {
      "resources": [
        "content/overlay.css",
        "content/translation-overlay.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
